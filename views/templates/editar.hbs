<div class="container mt-5">
  <div class="card">
    <div class="card-header">
      <h3>Editar Dados do Veículo</h3>
    </div>
    <div class="card-body">
      {{#each carros}}
      <form action="/carros/editar/{{this.id_carro}}" method="POST">
        <div class="form-group">
          <label for="marca">Marca:</label>
          <input type="text" name="marca" id="marca" value="{{this.marca}}" class="form-control">
        </div>
        <div class="form-group">
          <label for="modelo">Modelo:</label>
          <input type="text" name="modelo" id="modelo" value="{{this.modelo}}" class="form-control">
        </div>
        <div class="form-group">
          <label for="cor">Cor:</label>
          <input type="text" name="cor" id="cor" value="{{this.cor}}" class="form-control">
        </div>
        <div class="form-group">
          <label for="ano">Ano:</label>
          <input type="text" name="ano" id="ano" value="{{this.ano}}" class="form-control">
        </div>
        <div class="form-group">
          <label for="placa">Placa:</label>
          <input type="text" name="placa" id="placa" value="{{this.placa}}" class="form-control">
        </div>
        <div class="form-group">
          <label for="preco">Preço(R$):</label>
          <input type="text" name="preco" id="preco" value="{{this.preco}}" class="form-control">
        </div>
        <div class="form-group">
        <button type="submit" class="btn btn-sm btn-success">Salvar</button>
        <a href="/carros/lista" class="btn btn-sm btn-danger">Voltar</a>
        </div>
      </form>
      {{/each}}
    </div>
  </div>
</div>